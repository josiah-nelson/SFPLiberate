name: Build BLE Proxy

on:
  push:
    branches:
      - main
      - develop
    paths:
      - 'ble-proxy-service/**'
      - '.github/workflows/build-ble-proxy.yml'
  pull_request:
    paths:
      - 'ble-proxy-service/**'
      - '.github/workflows/build-ble-proxy.yml'
  release:
    types: [published]
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}/ble-proxy

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        if: github.event_name != 'pull_request'
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=ref,event=pr
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
            type=semver,pattern={{major}}
            type=raw,value=latest,enable={{is_default_branch}}
            type=sha,prefix={{branch}}-

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: ./ble-proxy-service
          platforms: linux/amd64,linux/arm64
          push: ${{ github.event_name != 'pull_request' }}
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Test health check
        if: github.event_name != 'pull_request'
        run: |
          # Pull the amd64 image for testing
          docker pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}
          
          # Run container
          docker run -d --name test-ble-proxy \
            -p 8081:8081 \
            ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}
          
          # Wait for service to start
          sleep 10
          
          # Health check
          curl -f http://localhost:8081/health || exit 1
          
          # Check response format
          response=$(curl -s http://localhost:8081/health)
          echo "Health check response: $response"
          
          # Verify JSON format
          echo "$response" | jq -e '.status == "healthy"' || exit 1
          
          # Cleanup
          docker stop test-ble-proxy
          docker rm test-ble-proxy

      - name: Generate SBOM
        if: github.event_name == 'release'
        uses: anchore/sbom-action@v0
        with:
          image: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.ref_name }}
          format: spdx-json
          output-file: ble-proxy-sbom.spdx.json

      - name: Upload SBOM artifact
        if: github.event_name == 'release'
        uses: actions/upload-artifact@v4
        with:
          name: ble-proxy-sbom
          path: ble-proxy-sbom.spdx.json
          retention-days: 90

  security-scan:
    runs-on: ubuntu-latest
    needs: build-and-push
    if: github.event_name != 'pull_request'
    permissions:
      contents: read
      security-events: write

    steps:
      - name: Run Trivy vulnerability scanner
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}
          format: 'sarif'
          output: 'trivy-results.sarif'

      - name: Upload Trivy results to GitHub Security
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: 'trivy-results.sarif'
