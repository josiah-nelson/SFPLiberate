# Deployment Mode (standalone=SQLite, appwrite=Cloud Database)
DEPLOYMENT_MODE=standalone

# SQLite Database Configuration (standalone mode only)
DATABASE_URL=sqlite+aiosqlite:///./data/sfp_library.db
DATABASE_FILE=/app/data/sfp_library.db
DATABASE_ECHO=false

# Appwrite Database Configuration (appwrite mode only)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=
APPWRITE_API_KEY=
APPWRITE_DATABASE_ID=sfp_library
APPWRITE_COLLECTION_ID=sfp_modules
APPWRITE_BUCKET_ID=sfp_eeprom_data

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=SFPLiberate API
VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=["*"]

# Submissions
SUBMISSIONS_DIR=/app/data/submissions

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# Features
ENABLE_COMMUNITY_IMPORT=false
COMMUNITY_INDEX_URL=
