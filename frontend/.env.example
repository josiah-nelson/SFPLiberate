# Deployment Mode Configuration
# Options: "standalone" (Docker self-hosted) or "appwrite" (Cloud with auth)
DEPLOYMENT_MODE=standalone
NEXT_PUBLIC_DEPLOYMENT_MODE=standalone

# Authentication (Appwrite only - disabled for standalone)
NEXT_PUBLIC_ENABLE_AUTH=false

# API Configuration
# For standalone: /api (proxied through Next.js)
# For Appwrite: https://api.sfpliberate.com (public backend URL)
NEXT_PUBLIC_API_URL=/api

# Backend URL (standalone only - internal Docker network)
BACKEND_URL=http://backend

# Appwrite Configuration (Cloud deployment only)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=

# Backend Appwrite Configuration (for FastAPI backend on Appwrite Functions)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=
APPWRITE_API_KEY=
APPWRITE_DATABASE_ID=sfp_library
APPWRITE_COLLECTION_ID=sfp_modules
APPWRITE_BUCKET_ID=sfp_eeprom_data

# Feature Flags
NEXT_PUBLIC_ENABLE_WEB_BLUETOOTH=true
NEXT_PUBLIC_ENABLE_BLE_PROXY=true
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=false

# Development
NODE_ENV=development
